{
    "manifest_version": 3,
    "name": "CodeCrackUps",
    "version": "1.0",
    "description": "Shows funny memes when you search or type about AI tools or coding.",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "AI Meme Generator"
    }
}